<body class="bg-gradient-to-r from-blue-500 to-purple-500 min-h-screen flex flex-col items-center justify-center">
  <!-- Navbar -->
  <header class="w-full bg-blue-600 text-white py-4">
    <div class="container mx-auto px-4 pl-12 flex justify-between items-center">
      <h1 class="text-2xl font-bold">Home</h1>
      <nav>
        <a href="#" class="hover:underline px-3">User : {{userDetails.name}}</a>
        <a href="#upcoming-elections" class="hover:underline px-3">Upcoming Elections</a>
        <a href="#profile" class="hover:underline px-3">Profile</a>
        <form action="/voter/logout" method="post" autocomplete="off">
          <button type="submit">Logout</button>
        </form>
        
      </nav>
    </div>
  </header>

  <!-- Welcome Section -->
  <section class="w-full max-w-4xl mx-auto mt-8 p-6 bg-white rounded-lg shadow-lg text-center">
    <h2 class="text-3xl font-semibold text-gray-800 mb-4">Welcome, {{userDetails.name}}</h2>
    <p class="text-gray-600">Stay informed and exercise your voting rights in the upcoming elections.</p>
  </section>

  <!-- Upcoming Elections Section -->
  <section id="upcoming-elections" class="w-full max-w-4xl mx-auto mt-8 p-6 bg-white rounded-lg shadow-lg">
    <h3 class="text-2xl font-semibold text-gray-800 mb-4">Upcoming Elections</h3>
    <ul class="space-y-4">
      <!-- Sample Election Entry -->
      <li class="border border-gray-300 p-4 rounded-lg">
        <div class="flex justify-between items-center">
          <div>
            <h4 class="text-lg font-semibold text-gray-800">Local Council Election</h4>
            <p class="text-gray-600">Date: April 15, 2025</p>
          </div>
          <a href="/elections/1" class="bg-blue-500 text-white py-2 px-4 rounded-lg hover:bg-blue-600">View Candidates</a>
        </div>
      </li>
      <!-- Additional elections can be added dynamically here -->
    </ul>
  </section>

  <!-- Profile Section -->
  <section id="profile" class="w-full max-w-4xl mx-auto mt-8 p-6 bg-white rounded-lg shadow-lg">
    <h3 class="text-2xl font-semibold text-gray-800 mb-4">Your Profile</h3>
    <div class="space-y-4">
      <p><span class="font-semibold">Name:</span> {{userDetails.name}}</p>
      <p><span class="font-semibold">Voting District:</span> {{userDetails.votingDistrict}}</p>
      <p><span class="font-semibold">Registered Since:</span> {{userDetails.createdAt}}</p>
    </div>
  </section>

  <!-- Footer -->
  <footer class="w-full bg-gray-800 text-white py-4 mt-8">
    <div class="container mx-auto px-4 text-center">
      <p>&copy; 2024 DeVote. All Rights Reserved.</p>
    </div>
  </footer>
</body>
