<body class="bg-gradient-to-r from-white to-blue-400 flex items-center justify-center min-h-screen">

    <div class="w-full max-w-4xl mx-auto bg-white shadow-lg rounded-lg overflow-hidden">
        <!-- Page Header -->
        <h2 class="text-2xl font-bold text-center text-gray-700 py-4 border-b border-gray-200">Election Results</h2>

        <!-- Candidates Table -->
        <div class="overflow-x-auto mt-4 px-6 pb-6">
            <table class="min-w-full bg-white divide-y divide-gray-200">
                <thead class="bg-gray-700 text-white">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider">Election Name</th>
                        <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider">Result</th>
                    </tr>
                </thead>
                {{#if results}}
                <tbody id="candidatesTable" class="bg-white divide-y divide-gray-200">
                    {{#each results}}
                    <tr>
                        <td class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider">{{this.title}}</td>
                        <td class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider">{{this.result}}</td>
                    </tr>
                    {{/each}}
                    <!-- Rows will be dynamically inserted here -->
                </tbody>
                {{/if}}
            </table>
        </div>

        <!-- Go Back Button -->
        <div class="text-center py-6">
            <button onclick="window.history.back()" class="bg-blue-500 text-white px-4 py-2 rounded">Go Back</button>
        </div>
    </div>
    </body>
